<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_navigation"
    app:startDestination="@+id/splashFragment">

    <include app:graph="@navigation/login_graph" />
    <include app:graph="@navigation/main_graph" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.astashin.bookvoed.components.splash.SplashFragment"
        android:label="Splash Fragment"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/go_to_login"
            app:destination="@id/login_graph"
/>

        <action
            android:id="@+id/go_to_main"
            app:destination="@id/main_graph"
            app:launchSingleTop="true"
            app:popUpTo="@id/splash_navigation"
            app:popUpToInclusive="true"/>

    </fragment>

</navigation>